//---------------------------------------------------------------------------

// FUNCTION DEFINITION
NODE * NewNode(int element)
{
	NODE * p;
	p = new NODE;
	p->data = element;
	p->next = NULL;
	return p;
}

void NewHeadBlankNode(String str)
{
	if (str == "list")
	{
		first = NewNode(0);
		first->next = first;
		last = first;
	}
	else if (str == "stack")
	{
		top = NewNode(0);
		top->next = top;
	}
	else if (str == "queue")
	{
		front = NewNode(0);
		front->next = front;
		rear = front;
	}
}

DNODE * NewDnode(int element)
{
	DNODE * p;
	p = new DNODE;
	p->data = element;
	p->prev = NULL;
	p->next = NULL;
	return p;
}

void NewHeadBlankDnode()
{
	head = NewDnode(0);
	head->prev = head;
	head->next = head;
	tail = head;
}

// NewHeadBlankNode
void Constructure()
{
	NewHeadBlankNode("list");
	NewHeadBlankDnode();
	NewHeadBlankNode("stack");
	NewHeadBlankNode("queue");
}

// Singly Linked list
void InsertFirst(int element)
{
	NODE * p;
	p = NewNode(element);
	p->next = first->next;
	first->next = p;
	if (last == first)
		last = p;
}

// 建立新的節點p，要串在x後面
void InsertAfter(NODE * x, int element)
{
	// 建立新的節點p
	// p的data設成element
	NODE * p;
	p = NewNode(element);
	// p的下一個為原本接在x後面的
	p->next = x->next;
	// x的下一變成p
	x->next = p;
	if (x == last)
		last = p;
}

void InsertLast(int element)
{
	// 建立新的節點p
	NODE * p;
	// p的data設成element
	p = NewNode(element);
	p->next = last->next;
	last->next = p;
	last = p;
}

NODE * Search(int target)
{
	NODE * p;
	p = first->next;
	count = 1;
	while ((p != first) && (p->data != target))
	{
		p = p->next;
		count++;
	}
	if (p == first)
		return NULL;
	return p;
}

NODE * SearchBefore(int target)
{
	NODE * p, * q;
	for (q = first, p = first->next; (p != first && p->data != target); q = p, p = p->next);
	if (p == first)
		return NULL;
	return q;
}

int DeleteAfter(NODE * x)
{
	NODE * p;
	p = x->next;
	x->next = p->next;
	int item = p->data;
	if (p == last)
		last = x;
	delete [] p;
	return item;
}

void RandomNumberInsertLast(int n, int range)
{
    srand(time(NULL));
	int data = 0;
	String line = "";
	for (int i = 0; i < n; i++)
	{
		data = rand() % range + 1;
		line += IntToStr(data) + "  ";
		InsertLast(data);
	}
	Form1->Memo1->Lines->Add("Random numbers: " + line);
}

void ReverseList()
{
	NODE * Current, * Prev, * Next;
	Next = first->next;
	Current = last;
	last = Next;
	while (Next != first)
	{
		Prev = Current;
		Current = Next;
		Next = Next->next;
		Current->next = Prev;
	}
	first->next = Current;
	last->next = first;
}

void ClearList()
{
	NODE * p;
	for (p = first->next; p != first; p = first->next)
	{
		first->next = p->next;
		delete [] p;
	}
	last = first;
}

void PrintList()
{
	String line = "";
	NODE * p;
	for (p = first->next; p != first; p = p->next)
		line += IntToStr(p->data) + " -> ";
	line += "<";
	Form1->PageControl2->TabIndex = 0;
	Form1->Memo1->Lines->Add(line);
}

// Doubly Linked list
void InsertHead(int element)
{
	DNODE * p;
	p = NewDnode(element);
	p->next = head->next;
	head->next->prev = p;
	head->next = p;
	p->prev =head;
	if (tail == head)
		tail = p;
}

// 建立新的節點p，要串在x後面
void InsertAfterD(DNODE * x, int element)
{
	// 建立新的節點p
	// p的data設成element
	DNODE * p;
	p = NewDnode(element);
	// p的下一個為原本接在x後面的
	p->next = x->next;
	x->next->prev = p;
	// x的下一變成p
	x->next = p;
	p->prev = x;
	if (x == tail)
		tail = p;
}

void InsertTail(int element)
{
	// 建立新的節點p
	DNODE * p;
	// p的data設成element
	p = NewDnode(element);
	p->next = head->prev->next;
	head->prev->next->prev = p;
	head->prev->next = p;
	p->prev = head->prev;
	head->prev = p;
}

DNODE * SearchD(int target)
{
	DNODE * p;
	p = head->next;
	Dcount = 1;
	while ((p != head) && (p->data != target))
	{
		p = p->next;
		Dcount++;
	}
	if (p == head)
		return NULL;
	return p;
}

int DeleteD(DNODE * x)
{
	if (x == head)
	{
		Form1->Memo2->Lines->Add("Can't delete empty list!");
        return -1;
	}
	else
	{
		x->prev->next = x->next;
		x->next->prev = x->prev;
		int item = x->data;
		if (x == tail)
			tail = x->prev;
		delete [] x;
		return item;
	}

}

void RandomNumberInsertTail(int n, int range)
{
	srand(time(NULL));
	int data = 0;
	String line = "";
	for (int i = 0; i < n; i++)
	{
		data = rand() % range + 1;
		line += IntToStr(data) + "  ";
		InsertTail(data);
	}
	Form1->Memo2->Lines->Add("Random numbers: " + line);
}

void ReverseDList()
{
	DNODE * Current, * Prev, * Next;
	Next = head->next;
	Current = tail;
	tail = Next;
	while (Next != head)
	{
		Prev = Current;
		Current = Next;
		Next = Next->next;
		Current->next = Prev;
		Prev->prev = Current;
	}
	head->next = Current;
	Current->prev = head;
	tail->next = head;
    head->prev = tail;
}

void ClearDList()
{
	DNODE * p;
	for (p = head->next; p != head; p = head->next)
	{
		head->next = p->next;
		delete [] p;
	}
	tail = head;
}

void PrintDList()
{
	String line = "";
	DNODE * p;
	for (p = head->next; p != head; p = p->next)
		line += IntToStr(p->data) + " -> ";
	line += "<";
	Form1->PageControl2->TabIndex = 1;
	Form1->Memo2->Lines->Add(line);
}

// Linked Stack
void push(int element)
{
	NODE * p = NewNode(element);
	p->next = top->next;
	top->next = p;
}

int pop()
{
	NODE * p = top->next;
	if (p == top)
		return -1;
	int result = p->data;
	top->next = p->next;
	delete [] p;
	return result;
}

void RandomNumberPush(int n, int range)
{
	srand(time(NULL));
	int data = 0;
	String line = "";
	for (int i = 0; i < n; i++)
	{
		data = rand() % range + 1;
		line += IntToStr(data) + "  ";
		push(data);
	}
	Form1->Memo3->Lines->Add("Random numbers: " + line);
}

void PrintStack()
{
	String line = "";
	NODE * p;
	for (p = top->next; p != top; p = p->next)
		line += IntToStr(p->data) + " -> ";
	line += "<";
	Form1->PageControl2->TabIndex = 2;
	Form1->Memo3->Lines->Add(line);
}

// Linked Queue
void AddQueue(int element)
{
	NODE * p = NewNode(element);
	p->next = rear->next;
	rear->next = p;
	rear = p;
}

int DeleteQueue()
{
	NODE * p = front->next;
	if (p == front)
		return -1;
	int result = p->data;
	front->next = p->next;
	delete [] p;
	return result;
}

void RandomNumberAddQueue(int n, int range)
{
	srand(time(NULL));
	int data = 0;
	String line = "";
	for (int i = 0; i < n; i++)
	{
		data = rand() % range + 1;
		line += IntToStr(data) + "  ";
		AddQueue(data);
	}
	Form1->Memo4->Lines->Add("Random numbers: " + line);
}

void PrintQueue()
{
	String line = "";
	NODE * p;
	for (p = front->next; p != front; p = p->next)
		line += IntToStr(p->data) + " -> ";
	line += "<";
	Form1->PageControl2->TabIndex = 3;
	Form1->Memo4->Lines->Add(line);
}
