TForm1 *Form1;

// DECLAIR NEW DATA STRUCTURE
// Singly linked list
typedef struct node
{
	int data;
	struct node * next;
} NODE;
// Doubly inked list
typedef struct dnode
{
	int data;
	struct dnode * prev;
	struct dnode * next;
} DNODE;

// GLOBAL VARIABLE
// Singly linked list
NODE * first, * last;
int count = 0;
// Doubly inked list
DNODE * head, * tail;
int Dcount = 0;
// Linked Stack
NODE * top;
// Linked Queue
NODE * front, * rear;


// PROTOTYPE DECLARATION
// 建立新的節點p，要串在x後面
NODE * NewNode(int element);
void NewHeadBlankNode();
DNODE * NewDnode(int element);
void NewHeadBlankDnode(String str);
void Constructure();
// Singly linked list
void InsertFirst(int element);
void InsertAfter(NODE * x, int element);
void InsertLast(int element);
NODE * Search(int target);
NODE * SearchBefore(int target);
int DeleteAfter(NODE * x);
void RandomNumberInsertLast(int n, int range);
void ReverseList();
void ClearList();
void PrintList();
// Doubly linked list
void InsertHead(int element);
void InsertAfterD(DNODE * x, int element);
void InsertTail(int element);
DNODE * SearchD(int target);
int DeleteD(DNODE * x);
void RandomNumberInsertTail(int n, int range);
void ReverseDList();
void ClearDList();
void PrintDList();
// Linked Stack
void push(int element);
int pop();
void RandomNumberPush(int n, int range);
void PrintStack();
// Linked Queue
void AddQueue(int element);
int DeleteQueue();
void RandomNumberAddQueue(int n, int range);
void PrintQueue();

